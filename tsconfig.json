{
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "outDir": "es",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src",
    "views"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
  ]
}
